<%= form_with model: @delivery_address, url: delivery_address_path do |f| %>
  <div class="container mt-5">
    <div class="row mt-3">
      <div class="col-3">
        配送先編集
      </div>
    </div>
    <div class="row mt-3">
      <div class='col-3'>
        郵便番号（ハイフンなし）
      </div>
      <div class='col'>
        <%= f.text_field :postal_code, placeholder: "0000000" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class='col-3'>
        住所
      </div>
      <div class='col'>
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園0-0", class: "address_delivery" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class='col-3'>
        宛名
      </div>
      <div class='col'>
        <%= f.text_field :name, placeholder: "令和道子" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class='col'>
        <%= f.submit '変更内容を保存', class: "submit" %>
      </div>
    </div>
  </div>
<% end %>