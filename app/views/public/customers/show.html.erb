<div class= "mypage_main">
  <h4 class="mypage"><span>マイページ</span></h4>
  <div class='container'>
    <div class="row mt-5 ">
      <div class='col fs-4'>
        登録情報
      </div>
      <div class='col fs-4'>
        <%= link_to "編集する", customers_edit_path %>
      </div>
    </div>
    <div class= 'row my_page mt-3'>
      <div class='container'>
        <div class='row '>
          <div class='col-2 my_page_container py-3'>
            氏名
          </div>
          <div class='col-4 my_page_container py-3'>
            <%= @customer.last_name %>
            <%= @customer.first_name %>
          </div>
        </div>
        <div class='row '>
          <div class='col-2 my_page_container py-3'>
            カナ
          </div>
          <div class='col-4 my_page_container py-3'>
            <%= @customer.last_name_kana %>
            <%= @customer.first_name_kana %>
          </div>
        </div>
        <div class='row '>
          <div class='col-2 my_page_container py-3'>
            郵便番号
          </div>
          <div class='col-4 my_page_container py-3'>
            <%= @customer.postal_code %>
          </div>
        </div>
        <div class='row '>
          <div class='col-2 my_page_container py-3'>
            住所
          </div>
          <div class='col-4 my_page_container py-3'>
            <%= @customer.address %>
          </div>
        </div>
        <div class='row '>
          <div class='col-2 my_page_container py-3'>
            電話番号
          </div>
          <div class='col-4 my_page_container py-3'>
            <%= @customer.telephone_number %>
          </div>
        </div>
        <div class='row '>
          <div class='col-2 my_page_container py-3'>
            メールアドレス
          </div>
          <div class='col-4 my_page_container py-3'>
            <%= @customer.email %>
          </div>
        </div>
      </div>
    </div>
    <div class='row mt-3'>
      <div class='col-1'>
        配送先
      </div>
      <div class='col'>
        <%= link_to "一覧を見る", delivery_addresses_path, class: "btn btn-primary" %>
      </div>
    </div>
    <div class='row'>
      <div class='col-1 mt-3'>
        注文履歴
      </div>
      <div class='col mt-3'>
         <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>

</div>
