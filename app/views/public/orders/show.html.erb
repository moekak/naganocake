<div class='container'>
  <div class="row　pt-5 m-5">
    <span>注文履歴詳細</span>
  </div>
  <div class="row">
    <div class="col-9">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row">注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th scope="row">配送先</th>
            <td>
              〒<%= @order.postal_code %>
              <%= @order.address %>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th scope="row">支払方法</th>
            <td><%= @order.payment_method_i18n  %></td>
          </tr>
          <tr>
            <th scope="row">ステータス</th>
            <td><%= @order.payment_method_i18n  %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row">商品合計</th>
            <td><%= @order.total_payment - @order.shipping_cost %></td>
          </tr>
          <tr>
            <th scope="row">配送料</th>
            <td>
              <%= @order.shipping_cost %>
            </td>
          </tr>
          <tr>
            <th scope="row">ご請求額</th>
            <td> <%= @order.total_payment  %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-bordered">
         <thead class='bg-light'>
            <tr>
              <th class='col-2'>商品</th>
              <th class='col'>単価（税込み)</th>
              <th class='col'>個数</th>
              <th class='col'>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @order.order_details.each do |item| %>
            <tr>
              <td><%= item.item.name %></td>
              <td><%= item.item.price %></td>
              <td><%= item.amount%></td>
              <td><%= item.item.price * item.amount %></td>
            </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>




