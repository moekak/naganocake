


<table class="table table-bordered border-primary mt-5">
  <thead class='bg-light'>
    <tr>
      <th class='col-1'>注文日</th>
        <th class='col-4'>配送先</th>
        <th class='col-2'>注文商品</th>
        <th class='co1-1'>支払金額</th>
        <th class='col-1'>ステータス</th>
        <th class='col-2'>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            〒<%= order.postal_code %> <br>
            <%= order.address %> <br>
            <%= order.name %>
          <td>
				    <% order.order_details.each do |item| %>
              <%= item.item.name %> <br>
            <% end %>
          </td>
          <td><%= order.total_payment %></td>
          <td></td>
          <td><%= link_to "表示する", order_path(order.id),  class: "submit"%> </td>

        <% end %>

        </tr>
    </tbody>
  </table>
