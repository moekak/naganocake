

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<!--名前-->
<div class='container mt-5'>
  <div cass="row">
    <div class="col">
      <h2><span>新規会員登録</span></h2>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3">
      名前
    </div>
    <div class="col-3">
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和" %>
    </div>
    <div class='col-3'>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "last_name",placeholder: "道子" %>
    </div>
  </div>
  <!--カナ-->
  <div class="row mt-3">
    <div class="col-3">
      フリガナ
    </div>
    <div class="col-3">
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana",placeholder: "レイワ" %>
    </div>
    <div class="col-3">
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "ミチコ" %>
    </div>
  </div>
  <!--メールアドレス-->
  <div class="row mt-3">
    <div class="col-3">
      メールアドレス
    </div>
    <div class="col-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
    </div>
  </div>
  <!--郵便番号-->
  <div class="row mt-3">
    <div class="col-3">
      郵便番号（ハイフンなし）
    </div>
    <div class="col-3">
      <%= f.text_field :postal_code, autofocus: true, placeholder: "000000000" %>
    </div>
  </div>
  <!--住所-->
  <div class="row mt-3">
    <div class="col-3">
      住所
    </div>
    <div class="col-6">
      <%= f.text_field :address, autofocus: true, class: "address",placeholder: "東京都渋谷区代々木神園0-0" %>
    </div>
  </div>
  <!--電話番号-->
  <div class="row mt-3">
    <div class="col-3">
      電話番号（ハイフンなし）
    </div>
    <div class="col-3">
      <%= f.text_field :telephone_number, autofocus: true, placeholder: "0000000" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3">
      パスワード（6文字以上）
    </div>
    <div class="col-3">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3">
      パスワード（確認用）
    </div>
    <div class="col-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>
  <div class="row">
    <div class='col offset-3 mt-5'>
       <div class="actions">
          <%= f.submit "新規登録", class: "submit" %>
        </div>
    </div>
  </div>

</div>
<% end %>







