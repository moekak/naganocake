
<%= form_with model: @customer, url: admin_customer_path do |f| %>

<div class='container mt-5'>
  <div class="row mt-4">
    <div class="col-6">
      <h4>
        <span><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</span>
      </h4>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3">
      会員ID
    </div>
    <div class="col-3">
      <%= @customer.id %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3">
      氏名
    </div>
    <div class="col-3">
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    </div>
    <div class='col-3'>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "last_name" %>
    </div>
  </div>
  <!--カナ-->
  <div class="row mt-3">
    <div class="col-3">
      フリガナ
    </div>
    <div class="col-3">
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    </div>
    <div class="col-3">
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    </div>
  </div>
  <!--メールアドレス-->
  <div class="row mt-3">
    <div class="col-3">
      メールアドレス
    </div>
    <div class="col-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  <!--郵便番号-->
  <div class="row mt-3">
    <div class="col-3">
      郵便番号
    </div>
    <div class="col-3">
      <%= f.text_field :postal_code, autofocus: true %>
    </div>
  </div>
  <!--住所-->
  <div class="row mt-3">
    <div class="col-3">
      住所
    </div>
    <div class="col-6">
      <%= f.text_field :address, autofocus: true, class: "address" %>
    </div>
  </div>
  <!--電話番号-->
  <div class="row mt-3">
    <div class="col-3">
      電話番号
    </div>
    <div class="col-3">
      <%= f.text_field :telephone_number, autofocus: true %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3">
      会員ステータス
    </div>
    <div class="col-3">
      <%= f.radio_button :is_active, :true %>
      <%= f.label :is_active, "有効", {style: "display: inline-block;"} %>
      <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active, "退会", {style: "display: inline-block;"} %>
    </div>
  </div>
  <div class="row">
    <div class='col offset-3'>
       <%= f.submit "変更を保存",class: "submit" %>
    </div>
  </div>

</div>
<% end %>



