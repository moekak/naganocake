
  <div class="background">
    <h3 class="header">
      <span>商品一覧</span>
    </h3>
    <h2>
      <%= link_to "＋",  new_admin_item_path, class: "text-dark fs-1" %>
    </h2>
  </div>
  <div class="table_items">
    <table class="table">
        <thead class="bg-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id), class: "text-dark" %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active %>
              　販売中
               <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
          <% end %>
          <%= paginate @items%>
        </tbody>
    </table>
  </div>


