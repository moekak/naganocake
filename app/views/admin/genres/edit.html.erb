


<h4 class="title">ジャンル一覧　追加</h4>
  <%= form_with model: @genre, url: admin_genre_path do |f| %>
    <div class="container">
      <div class='row mt-3 align-items-center'>
        <div class='col-2'>
          ジャンル名
        </div>
        <div class='col-3'>
          <%= f.text_field :name %>
        </div>
        <div class='col-1'>
          <%= f.submit '変更を保存', class: "submit" %>
        </div>
      </div>
    </div>


  <% end %>
