<h4 class="title">ジャンル一覧　追加</h4>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="container">
      <div class='row mt-3 align-items-center'>
        <div class='col-2'>
          ジャンル名
        </div>
        <div class='col-3'>
          <%= f.text_field :name, placeholder: "ジャンル名" %>
        </div>
        <div class='col-1'>
          <%= f.submit '新規登録', class: "submit" %>
        </div>
      </div>
    </div>


  <% end %>

  <!--一覧画面-->

<div class="all">
  <table class="table">
    <thead class='bg-light'>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "edit_button" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
